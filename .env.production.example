# Production Environment Variables
# Copy to .env.production and fill in real values

# Required: Anthropic API key for AI features
ANTHROPIC_API_KEY=sk-ant-your-key-here

# Database (Railway provides this automatically)
POSTGRES_USER=powerplai
POSTGRES_PASSWORD=your-secure-password-here
POSTGRES_DB=powerplai
DATABASE_URL=postgresql+asyncpg://powerplai:password@host:5432/powerplai

# Frontend API URL (your deployed backend URL)
API_URL=https://your-backend.railway.app

# App settings
DEBUG=false
LOG_LEVEL=INFO
