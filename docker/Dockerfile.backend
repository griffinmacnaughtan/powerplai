FROM python:3.11-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    build-essential \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Upgrade pip
RUN pip install --upgrade pip

# Install Python dependencies directly (no editable mode needed in container)
# Core deps first (fast)
RUN pip install --no-cache-dir \
    fastapi>=0.109.0 \
    "uvicorn[standard]>=0.27.0" \
    pydantic>=2.5.0 \
    pydantic-settings>=2.1.0 \
    pandas>=2.1.0 \
    numpy>=1.26.0 \
    httpx>=0.26.0 \
    aiohttp>=3.9.0 \
    sqlalchemy>=2.0.0 \
    asyncpg>=0.29.0 \
    alembic>=1.13.0 \
    pgvector>=0.2.4 \
    anthropic>=0.40.0 \
    python-dotenv>=1.0.0 \
    structlog>=24.1.0 \
    tenacity>=8.2.0 \
    beautifulsoup4>=4.12.0 \
    lxml>=5.0.0 \
    slowapi>=0.1.9

# Heavy ML deps (slow but cached after first build)
RUN pip install --no-cache-dir sentence-transformers>=2.3.0 chromadb>=0.4.22

# Copy application code
COPY backend/ ./backend/

ENV PYTHONPATH=/app

CMD ["uvicorn", "backend.src.api.main:app", "--host", "0.0.0.0", "--port", "8000"]
